.card{
	border-radius: 15rpx;
	background-color: #ffffff;
	margin: 10rpx 15rpx;
	width: 720rpx;
	height: 400rpx;
	display: flex;
}
.card .row-img image{
	width: 300rpx;
	height: 400rpx;
	border-top-left-radius: 15rpx;
	border-bottom-left-radius: 15rpx;
}
.row-info{
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	margin-left: 25rpx;
}