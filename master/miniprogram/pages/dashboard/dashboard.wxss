.UCenter-bg {
  background-image: url(https://cdn.dafei110.cn/config/mybghead.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

.flooter-logo{
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 50rpx;
}
.flooter-logo image{
	width: 150px;
	height: 70px;
	opacity:0.5;
}
.pop{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 10rpx 30rpx;
  background-color: #FFEAC6;
  color: red;
}